{
  "name": "desktop-defender",
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/",
    "check:hardcoding": "tsx scripts/check-hardcoding.ts",
    "check:all": "npm run lint && npm run check:hardcoding",
    "package:mac": "npm run build && electron-builder --mac --config electron-builder.config.ts",
    "package:mac:dmg": "npm run build && electron-builder --mac dmg --config electron-builder.config.ts",
    "generate-icon": "tsx scripts/generate-icon.ts",
    "package:win": "npm run build && electron-builder --win --config electron-builder.config.ts",
    "package:linux": "npm run build && electron-builder --linux --config electron-builder.config.ts"
  },
  "keywords": [
    "game",
    "tower-defense",
    "idle",
    "electron",
    "phaser"
  ],
  "author": "Desktop Defender",
  "license": "ISC",
  "description": "Desktop Defender - Idle auto-battler tower defense game",
  "dependencies": {
    "phaser": "^3.90.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "electron": "^33.4.11",
    "electron-builder": "^26.8.1",
    "eslint": "^10.0.2",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
